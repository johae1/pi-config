#!/bin/sh

DAEMON="httpd"

start() {
    printf 'Starting %s ' "$DAEMON"
    start-stop-daemon -S -b -v --exec "/usr/sbin/$DAEMON"
}

stop() {
    printf 'Stopping %s ' "$DAEMON"
    start-stop-daemon -K -x "/usr/sbin/$DAEMON"
    [ $? = 0 ] && echo "OK" || echo "FAIL"
}

restart() {
    printf 'Restarting %s' "$DAEMON"
    stop
    start
}

# Main
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart|reload)
        restart
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        exit 1
        ;;
esac

exit $?
